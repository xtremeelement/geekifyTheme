<div class="container">
    <div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
        <h1 class="display-4">{{section.settings.title}}</h1>
        <p class="lead">{{section.settings.description}}</p>
    </div>
    <div class="card-deck mb-3 text-center">
        {% for block in section.blocks %}
        {% assign description_list = block.settings.tier_description | split: ', ' %}
            <div class="card mb-4 shadow-sm">
                <div class="card-header">
                    <h4 class="my-0 font-weight-normal">{{block.settings.tier_name}}</h4>
                </div>
                <div class="card-body">
                    <h1 class="card-title pricing-card-title">${{block.settings.tier_price}} <small class="text-muted">/ {{block.settings.tier_recurrence}}</small></h1>
                    <ul class="list-unstyled mt-3 mb-4">
                        {% for item in description_list %}
                            <li>{{item}}</li>
                        {% endfor %}                        
                    </ul>
                    {% if block.settings.tier_button == "outline" %}
                        <a href="{{block.settings.tier_link}}" type="button" class="btn btn-lg btn-block btn-outline-primary">{{block.settings.button_text}}</a>  
                    {% else %}
                        <a href="{{block.settings.tier_link}}" type="button" class="btn btn-lg btn-block btn-primary">{{block.settings.button_text}}</a>  
                    {% endif %}
                </div>
            </div>                
        {% endfor %}
    </div>
</div>
                          
                                           

  {% schema %}
  {
    "name": "Pricing Section",
    "class": "section-pricing",
    "tag": "section",
    "settings": [
      {
        "id": "title",
        "type": "text",
        "label": "Title",
        "default": "Pricing"
      },
      {
          "id" : "description",
          "type" : "textarea",
          "label" : "Description",
          "default" : "Quickly build an effective pricing table for your potential customers with this Bootstrap example. It’s built with default Bootstrap components and utilities with little customization."
      }
    ],
    "blocks": [
        {
            "type": "tier",
            "name": "Tier",
            "limit": 4,
            "settings": [
                {
                    "id": "tier_name",
                    "type": "text",
                    "label" : "Tier Name",
                    "default": "Free"
                },
                {
                    "id": "tier_price",
                    "type": "text",
                    "label": "Tier Price",
                    "default": "0"
                },
                {
                    "id": "tier_recurrence",
                    "type": "select",
                    "label" : "Tier Recurrence",
                    "options": [
                        {
                            "value": "dy",
                            "label": "Daily"
                        },
                        {
                            "value": "mo",
                            "label": "Monthly"
                        },
                        {
                            "value": "yr",
                            "label": "Yearly"
                        }
                    ],
                    "default": "mo"
                },
                {
                    "id": "tier_description",
                    "type": "textarea",
                    "label": "Tier Description",
                    "info" :"Separate each item by a comma",
                    "default": "10 users included, 2GB of storage, Email Support, Help Center Access",
                    "placeholder": "Example A, Example B, Example B"

                },
                {
                    "id": "tier_button",
                    "type": "select",
                    "label": "Button Style",
                    "options": [
                        {
                            "value": "outline",
                            "label": "Outlined"
                        },
                        {
                            "value": "filled",
                            "label": "Filled"
                        }
                    ],
                    "default": "outline"
                },
                {
                    "id": "button_text",
                    "type" : "text",
                    "label": "Button Text",
                    "default": "Sign up for free"
                },
                {
                    "id": "tier_link",
                    "type": "text",
                    "label" : "Button URL",
                    "default" : "#"
                }
            ]
        }
    ],
    "presets":[
        {
            "category": "Custom Component",
            "name": "Pricing",
            "settings": {
                "title": "Pricing",
                "description":"Quickly build an effective pricing table for your potential customers with this Bootstrap example. It’s built with default Bootstrap components and utilities with little customization."
            },
            "blocks":[
                {
                    "type": "tier",
                    "settings": {
                        "tier_name": "Free",
                        "tier_price": "0",
                        "tier_recurrence": "dy",
                        "tier_button": "outline"

                    }
                },
                {
                    "type": "tier",
                    "settings": {
                        "tier_name": "Monthly",
                        "tier_price": "25",
                        "tier_recurrence": "mo",
                        "tier_button":"filled",
                        "button_text":"Sign Up"

                    }
                },
                {
                    "type": "tier",
                    "settings": {
                        "tier_name": "Yearly",
                        "tier_price": "99",
                        "tier_recurrence":"yr",
                        "tier_button": "filled",
                        "button_text": "Sign Up"

                    }
                }
            ]
        }
    ]    
  }
{% endschema %}